<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Relify</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    :root {
      --cor-destaque: #FFD700;
      --cor-fundo: #121212;
      --cor-box: #1f1f1f;
      --cor-letra: #fff;
      --cor-letra-secundaria: #ccc;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      transition: all 0.3s ease;
    }

    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: var(--cor-fundo);
      color: var(--cor-letra);
    }

    .top-bar {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 60px;
      background-color: var(--cor-box);
      font-size: 22px;
      font-weight: bold;
      box-shadow: 0 2px 8px rgba(0,0,0,0.4);
      color: var(--cor-destaque);
    }

    .content {
      padding: 20px;
      padding-bottom: 90px;
    }

    .page {
      display: none;
      animation: fadeIn 0.4s ease-in-out;
    }

    .page.active {
      display: block;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .info-box {
      background-color: var(--cor-box);
      padding: 20px;
      border-radius: 14px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.5);
      margin-bottom: 20px;
      color: var(--cor-letra-secundaria);
      border-left: 4px solid var(--cor-destaque);
    }

    .info-box i {
      margin-right: 10px;
      color: var(--cor-destaque);
    }

    .input-search {
      width: 100%;
      padding: 14px;
      font-size: 15px;
      border-radius: 12px;
      border: none;
      background-color: #2a2a2a;
      color: #fff;
      outline: none;
      box-shadow: inset 0 0 6px rgba(255, 215, 0, 0.2);
    }

    .input-search:focus {
      box-shadow: 0 0 10px var(--cor-destaque);
    }

    .bottom-nav {
      position: fixed;
      bottom: 0;
      width: 100%;
      background-color: #000;
      display: flex;
      justify-content: space-around;
      padding: 10px 0;
      box-shadow: 0 -3px 12px rgba(0,0,0,0.6);
      border-top: 1px solid #333;
    }

    .bottom-nav div {
      display: flex;
      flex-direction: column;
      align-items: center;
      font-size: 12px;
      color: #888;
      cursor: pointer;
      transform: scale(1);
    }

    .bottom-nav div:hover {
      color: var(--cor-destaque);
      transform: scale(1.1);
    }

    .bottom-nav div.active {
      color: var(--cor-destaque);
      font-weight: bold;
      transform: scale(1.1);
    }

    .bottom-nav i {
      font-size: 18px;
      margin-bottom: 4px;
    }
  </style>
</head>
<body>

  <div class="top-bar">Relify</div>

  <div class="content">
    <div id="page-inicio" class="page active">
      <div class="info-box">
        <i class="fas fa-play-circle"></i> 
        As músicas que você escuta vão aparecer aqui.
      </div>
    </div>

    <div id="page-buscar" class="page">
      <input type="text" class="input-search" placeholder="Buscar músicas, artistas...">
    </div>

    <div id="page-biblioteca" class="page">
      <div class="info-box"><i class="fas fa-book"></i> Suas playlists aparecerão aqui</div>
      <div class="info-box"><i class="fas fa-heart"></i> Músicas curtidas</div>
      <div class="info-box"><i class="fas fa-podcast"></i> Podcasts salvos</div>
    </div>

    <div id="page-criar" class="page">
      <div class="info-box"><i class="fas fa-plus"></i> Criar nova playlist</div>
      <div class="info-box"><i class="fas fa-podcast"></i> Criar novo podcast</div>
    </div>
  </div>

  <div class="bottom-nav">
    <div id="btn-inicio" class="active" onclick="showPage('inicio')"><i class="fas fa-home"></i>Início</div>
    <div id="btn-buscar" onclick="showPage('buscar')"><i class="fas fa-search"></i>Buscar</div>
    <div id="btn-biblioteca" onclick="showPage('biblioteca')"><i class="fas fa-book"></i>Biblioteca</div>
    <div id="btn-criar" onclick="showPage('criar')"><i class="fas fa-plus-circle"></i>Criar</div>
  </div>

  <script>
    function showPage(page) {
      const pages = ['inicio', 'buscar', 'biblioteca', 'criar'];
      pages.forEach(p => {
        document.getElementById('page-' + p).classList.remove('active');
        document.getElementById('btn-' + p).classList.remove('active');
      });
      document.getElementById('page-' + page).classList.add('active');
      document.getElementById('btn-' + page).classList.add('active');
    }
  </script>
</body>
</html>
